{
	"manifest_version": 2,
	"name": "BinaryConverter",
	"version": "1.0",

	"description": "Converts integers on screen to binary.",

	"icons": {
		"48": "icons/icon.png"
	},

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
		"js": ["scripts/binary_fractions.js", "scripts/findAndReplaceDOMText.js", "scripts/binarify.js"]
		}
	],
	"browser_specific_settings": {
		"gecko": {
			"id": "binary_converter@tremblinginferno.com"
		}
	}
}

